{
  "name": "mf.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register './**/*.t.ts'",
    "start": "npx cross-env PORT=3003 node server.js | npm run watchLess | webpack -w",
    "build": "webpack",
    "dev": "npm run watchLess | npx cross-env PORT=3003 node server.js | webpack -w",
    "watchLess": "less-watch-compiler ./src/UI/css/styles ./static/css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mishon-pon-pon/mf.messenger.praktikum.yandex.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Mishon-pon-pon/mf.messenger.praktikum.yandex/issues"
  },
  "homepage": "https://github.com/Mishon-pon-pon/mf.messenger.praktikum.yandex#readme",
  "dependencies": {
    "@types/assert": "^1.5.4",
    "@types/pug": "^2.0.5",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "handlebars": "^4.7.7",
    "parcel-bundler": "^1.12.5",
    "pug": "^3.0.2",
    "pug-cli": "*",
    "serverless-http": "^2.6.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.14.1",
    "@babel/preset-typescript": "^7.13.0",
    "@testing-library/dom": "^7.30.4",
    "@types/chai": "^4.2.21",
    "@types/chai-dom": "^0.0.10",
    "@types/jest": "^26.0.23",
    "@types/jsdom": "^16.2.13",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.14.44",
    "chai": "^4.3.4",
    "chai-dom": "^1.9.0",
    "copy-webpack-plugin": "^7.0.0",
    "jest": "^26.6.3",
    "jsdom": "^16.7.0",
    "jsdom-global": "^3.0.2",
    "less-watch-compiler": "^1.14.6",
    "mocha": "^8.4.0",
    "node-fetch": "^2.6.1",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.6",
    "ts-loader": "^8.0.14",
    "ts-node": "^10.2.0",
    "typescript": "^4.1.5",
    "webpack": "^5.17.0",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^3.11.2"
  },
  "stylelint": {
    "rules": {
      "alpha-value-notation": "percentage",
      "at-rule-no-vendor-prefix": true,
      "at-rule-whitelist": [
        "import",
        "media"
      ],
      "color-function-notation": "modern",
      "color-named": "always-where-possible",
      "custom-media-pattern": "^([a-z]+-?)*([a-z]+)$",
      "custom-property-pattern": "^([a-z]+-?)*([a-z]+)$",
      "declaration-block-no-duplicate-properties": true,
      "font-family-name-quotes": "always-where-recommended",
      "font-weight-notation": "numeric",
      "function-url-quotes": "always",
      "function-whitelist": [
        "color",
        "counter",
        "hsl",
        "linear-gradient"
      ],
      "hue-degree-notation": "angle",
      "media-feature-name-no-vendor-prefix": true,
      "no-descending-specificity": true,
      "no-duplicate-selectors": true,
      "order/properties-alphabetical-order": true,
      "property-blacklist": [
        "float"
      ],
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "property-no-vendor-prefix": true,
      "selector-class-pattern": "^([a-z]+[a-zA-Z]*|ng-[a-z]+(-[a-z]+)*)$",
      "selector-max-attribute": 0,
      "selector-max-specificity": "0,4,0",
      "selector-max-type": 0,
      "selector-max-universal": 0,
      "selector-no-vendor-prefix": true,
      "selector-pseudo-class-whitelist": [
        "hover",
        "focus",
        "global"
      ],
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "string-quotes": "double",
      "unit-whitelist": [
        "%",
        "deg",
        "px",
        "em",
        "vh"
      ],
      "value-no-vendor-prefix": true
    }
  }
}
